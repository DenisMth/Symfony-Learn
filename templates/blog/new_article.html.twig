{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_5_layout.html.twig' %}
{% block body %}

<h2 class="text-center m-5">
{% if editMode %}
Edit the article
{% else %}
Create a new article
{% endif %}
</h2>

<section class="w-75 mx-auto position-relative">
{{ form_start(formArticle)}}

{{ form_row(formArticle.title, {'attr': {'placeholder': "Title of the article"} }) }}
{{ form_row(formArticle.content, {'attr': {'placeholder': "Content of the article"} }) }}
{{ form_row(formArticle.picture, {'attr': {'placeholder': "Link to the picture of the article"} }) }}
<button type="submit" class="my-5 btn btn-success position-absolute end-0">
    {% if editMode %}
    Save changes
    {% else %}
    Add new article
    {% endif %}
</button>
{{ form_end(formArticle) }}
</section>

{% endblock %}
